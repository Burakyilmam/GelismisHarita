        function CreateMap(lat, lng, zoom, maxZoom) {
            openstreetmap = L.tileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { maxZoom: maxZoom });
            googlemap = L.tileLayer('http://www.google.cn/maps/vt?lyrs=s@189&gl=cn&x={x}&y={y}&z={z}', {
                attribution: 'Google'
            });
            map = new L.Map('map', { center: new L.LatLng(lat, lng), zoom: zoom });
            drawnItems = L.featureGroup().addTo(map);
            openstreetmap.addTo(map);
            createDrawnControl();
            switchLayer();
        }

        function createDrawnControl() {
            var drawControl = new L.Control.Draw({
                draw: {
                    polygon: true,
                    polyline: true,
                    rectangle: true,
                    circle: true,
                    marker: true
                },
                edit: {
                    featureGroup: drawnItems,
                    remove: true
                }
            });
            map.addControl(drawControl);
        }

        function switchLayer() {
            L.control.layers({
                'OpenStreetMap': openstreetmap,
                'Google': googlemap
            }, {
                'Draw Layer': drawnItems
            }, { position: 'topleft', collapsed: false }).addTo(map);
        }

        function makeDraggable(popup) {
            var pos = map.latLngToLayerPoint(popup.getLatLng());
            L.DomUtil.setPosition(popup._wrapper.parentNode, pos);
            var draggable = new L.Draggable(popup._container, popup._wrapper);
            draggable.enable();

            draggable.on('dragend', function () {
                var pos = map.layerPointToLatLng(this._newPos);
                popup.setLatLng(pos);
            });
        }

        function GetUserLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    function (position) {
                        userLatitude = position.coords.latitude;
                        userLongitude = position.coords.longitude;
                        userLatLng = new L.LatLng(position.coords.latitude, position.coords.longitude);
                        addUserLocationToMap(userLatLng);
                        document.getElementById('coordinatesInput').value = `${userLatitude},${userLongitude}`;
                        filterPharmacies();
                    },
                    function (error) {
                        switch (error.code) {
                            case error.PERMISSION_DENIED:
                                alert("Konum erişimi reddedildi. Lütfen tarayıcı ayarlarında konum izinlerini kontrol edin.");
                                break;
                            case error.POSITION_UNAVAILABLE:
                                alert("Konum bilgisi alınamadı. Lütfen internet bağlantınızı kontrol edin.");
                                break;
                            case error.TIMEOUT:
                                alert("Konum alımı zaman aşımına uğradı. Lütfen tekrar deneyin.");
                                break;
                            default:
                                alert("Bilinmeyen bir hata oluştu. Lütfen tekrar deneyin.");
                                break;
                        }
                        console.error('Konum Alınamadı:', error.message);
                    },
                    {
                        timeout: 10000, // 10 saniye
                        enableHighAccuracy: true
                    }
                );
            } else {
                alert('Tarayıcınız Geolocation API Desteklemiyor.');
            }
        }

        function addUserLocationToMap(location) {
            if (userLocationMarker) {
                userLocationMarker.remove();
            }
            userLocationMarker = L.marker(location, { icon: userIcon }).addTo(map);

            userLatitude = location.lat;
            userLongitude = location.lng;
            var geocodingUrl = 'https://nominatim.openstreetmap.org/reverse?format=json&lat=' + userLatitude + '&lon=' + userLongitude;
            fetch(geocodingUrl)
                .then(response => response.json())
                .then(data => {
                    var address = data.display_name;
                    var popupUserContent = '<div style="width: 200px; font-family: Arial, sans-serif;">' +
                        '<b style="font-size: 16px; color: #333; text-align: center; display: block;">Konum Bilgileri</b>' +
                        '<div style="margin-top: 10px; color: #666;">' +
                        '<b style="color: #333">Adres:</b><br>' + address + '<br>' +
                        '<b style="color: #333">Koordinat:</b><br>' + userLatitude + ', ' + userLongitude +
                        '</div>' +
                        '</div>';

                    userLocationMarker.bindPopup(popupUserContent);

                    userLocationMarker.on('click', function () {
                        userLocationMarker.openPopup();
                        makeDraggable(userLocationMarker.getPopup())
                    });

                    map.setView(location, 15);
                })
                .catch(error => console.error('Adres alınamadı:', error));
            map.setView(location, 15);
        }

        function getDirectionGoogleMaps(pharmacyLat, pharmacyLng) {
            pharmacyLatLng = L.latLng(pharmacyLat, pharmacyLng);
            var directionsURL = 'https://www.google.com/maps/dir/?api=1' +
                '&origin=' + userLatLng.lat + ',' + userLatLng.lng +
                '&destination=' + pharmacyLatLng.lat + ',' + pharmacyLatLng.lng;
            window.open(directionsURL, '_blank');
        }

