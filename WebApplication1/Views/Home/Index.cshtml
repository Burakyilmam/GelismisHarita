        function calculateArea(shapeType, coordinates, layer) {
            var area = 0;

            if (shapeType === 'Polygon' || shapeType === 'MultiPolygon') {
                var polygon = turf.polygon(coordinates);
                area = turf.area(polygon);
            }
            else if (shapeType === 'Point') {
                var center = layer.getLatLng();
                var radius = layer.getRadius();
                var point = turf.point([center.lng, center.lat]);
                var circle = turf.circle(point, radius, { units: 'meters' });
                area = turf.area(circle);
            }

            return area;
        }

        function createShapePopupContent(shapeType, area, layer) {
            var popupContent = '';
            var newArea = (area / 10000).toFixed(2);

            if (shapeType === 'Polygon' || shapeType === 'MultiPolygon') {
                popupContent = '<b style="color:red;">Alan Bilgisi</b><br>' +
                    '<b>Alan:</b> ' + newArea + ' m²';
            }
            else if (shapeType === 'Point') {
                var radius = layer.getRadius();
                popupContent = '<b style="color:red;">Daire Bilgileri</b><br>' +
                    '<b>Yarıçap:</b> ' + Math.round(radius) + ' m<br>' +
                    '<b>Alan:</b> ' + newArea + ' m²';

                var color = getColorBasedOnArea(newArea);
                layer.setStyle({
                    color: color,
                    fillColor: color,
                    fillOpacity: 0.5
                });
            }

            return popupContent;
        }

        function getColorBasedOnArea(area) {
            var color;
            if (area > 0 && area < 100) {
                color = 'green';
            } else if (area >= 100 && area < 500) {
                color = 'yellow';
            } else if (area >= 500 && area < 1000) {
                color = 'blue';
            } else if (area > 1000) {
                color = 'red';
            }
            return color;
        }

